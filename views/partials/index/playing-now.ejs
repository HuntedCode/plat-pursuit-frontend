<section class="card shadow-lg w-full bg-base-200 border-2 border-base-300 w-full transition duration-300 hover:shadow-accent hover:border-accent hover:bg-base-300 mb-8">
    <div class="card-body">
        <h2 class="card-title text-2xl sm:text-3xl lg:text-4xl font-bold place-self-center">Playing Now</h2>
        <div class="divider mt-0"></div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% items.forEach(function(item) { %>
                <div class="card bg-base-100 shadow-xl border-2 border-base-300 transition duration-300 hover:shadow-lg hover:border-accent hover:shadow-accent cursor-pointer" onclick="document.location='<%= item.slug %>'">
                    <div class="card-body flex flex-row items-center p-4 overflow-x-hidden group">
                        <figure class="flex-shrink-0 mr-4 rounded-lg border-2 border-base-300 transition duration-300 group-hover:scale-105 group-hover:border-accent">
                            <img src="<%= item.image %>" alt="<%= item.alt || 'Item image' %>" class="w-12 h-12 xl:w-16 xl:h-16 object-cover group-hover:scale-105" loading="lazy" />
                        </figure>

                        <div class="flex-grow space-y-1">
                            <h3 class="card-title text-sm md:text-base xl:text-lg line-clamp-2"><%= item.title %></h3>
                            <p class="text-xs xl:text-sm text-base-content/70 line-clamp-2"><%= new Intl.NumberFormat('en-US').format(item.players) %> players</p>
                            <div class="flex flex-col items-start gap-2">
                                <progress class="progress <% if (item.avgCompletion <= 0.33) { %>progress-error<% } else if (item.avgCompletion < 0.66) { %>progress-warning<% } else { %>progress-success<% } %> max-w-48 w-full" value="<%= item.avgCompletion * 100 %>" max="100"></progress>
                                <span class="text-xs xl:text-sm">Avg. Completion: <%= item.avgCompletion * 100 %>%</span>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="text-right mt-4">
            <a href="/" class="btn btn-ghost">View All Games</a>
        </div>
    </div>
</section>